# ---- General ports ----
VLLM_PORT=8000
RAG_PORT=8080
PROXY_PORT=8081
CHROMA_HTTP_PORT=8001

RUN_OPENWEBUI=0
OPENWEBUI_PORT=3000

# ---- Model & vLLM ----
MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
# Recommended on T4/V100 and for mistral tokenizer
VLLM_EXTRA_ARGS=--dtype float16 --max-model-len 8192
# If model is gated on HF:
# HF_TOKEN=hf_xxx

# ---- RAG settings ----
MAX_CONTEXT=8192
MAX_TOKENS=256
TEMPERATURE=0.2
TOP_K=4
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
CHROMA_AUTO_RESET=0

# ---------- Misc ----------
STREAM_BRIDGE=1
DEBUG_SSE=0
IGNORE_CLIENT_STOP=1

# SELinux: set to :Z on RHEL/Fedora hosts
SELINUX_SUFFIX=